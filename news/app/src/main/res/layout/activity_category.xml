<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_zhu_ye"
    tools:context="com.example.wangjia.news.CategoryActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/category_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="#837C7C"

        ></android.support.v7.widget.Toolbar>

    <CheckBox
        android:id="@+id/id_cat_amuse"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="娱乐"

        android:textSize="30sp"
        android:textStyle="normal"
        android:textColorHint="#837C7C"
        android:textColor="#837C7C"
        android:textColorLink="#A25248"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_divider"
        />
    <CheckBox
        android:id="@+id/id_cat_technology"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="科技"

        android:textSize="30sp"
        android:textStyle="normal"
        android:textColorHint="#837C7C"
        android:textColor="#837C7C"
        android:textColorLink="#A25248"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_divider"
        />
    <CheckBox
        android:id="@+id/id_cat_life"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="生活"

        android:textSize="30sp"
        android:textStyle="normal"
        android:textColorHint="#837C7C"
        android:textColor="#837C7C"
        android:textColorLink="#A25248"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_divider"
        />
    <CheckBox
        android:id="@+id/id_cat_learning"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学习"

        android:textSize="30sp"
        android:textStyle="normal"
        android:textColorHint="#837C7C"
        android:textColor="#837C7C"
        android:textColorLink="#A25248"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_divider"
        />
    <CheckBox
        android:id="@+id/id_cat_culture"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文化"

        android:textSize="30sp"
        android:textStyle="normal"
        android:textColorHint="#837C7C"
        android:textColor="#837C7C"
        android:textColorLink="#A25248"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_divider"
        />
    <CheckBox
        android:id="@+id/id_cat_military"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="军事"

        android:textSize="30sp"
        android:textStyle="normal"
        android:textColorHint="#837C7C"
        android:textColor="#837C7C"
        android:textColorLink="#A25248"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_divider"
        />
    <CheckBox
        android:id="@+id/id_cat_joke"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="笑话"

        android:textSize="30sp"
        android:textStyle="normal"
        android:textColorHint="#837C7C"
        android:textColor="#837C7C"
        android:textColorLink="#A25248"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:gravity="bottom|center">

        <Button
            android:id="@+id/id_cat_submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="提   交"
            android:textSize="30sp"
            android:textColor="#837C7C"
            />

    </LinearLayout>



</LinearLayout>
