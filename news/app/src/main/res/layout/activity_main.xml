<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.wangjia.news.MainActivity">

    <RelativeLayout
        android:layout_marginTop="141dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="24dp"
        android:id="@+id/linearLayout"

        android:weightSum="1"
        android:layout_below="@+id/linearLayout3"
        android:layout_toEndOf="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="25sp"
            android:id="@+id/textView" />

        <EditText
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="18"
            android:maxLines="1"
            android:id="@+id/input_username"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2.03"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView" />
        <ImageView
            android:id="@+id/input_delete"
            android:visibility="invisible"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:paddingRight="20dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/input_username"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_weight="2.55"
            android:layout_alignParentTop="true" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginTop="31dp"
        android:id="@+id/linearLayout4"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密    码"
            android:textSize="25sp"
            />
        <EditText
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="18"
            android:id="@+id/input_password"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_width="220dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_weight="2.75" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">


    </LinearLayout>

    <Button
        android:id="@+id/button_login"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="登       录"
        android:textSize="25sp"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout4"
        android:layout_marginStart="18dp" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="29dp"
        android:text="注      册"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/button_login"
        android:layout_alignBottom="@+id/button_login"
        android:layout_alignEnd="@+id/linearLayout" />


</RelativeLayout>
