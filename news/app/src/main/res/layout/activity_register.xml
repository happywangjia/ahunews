<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_marginTop="118dp"
        android:layout_marginStart="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="25sp"

            />

        <EditText
            android:maxLength="18"
            android:maxLines="1"
            android:id="@+id/reg_username"
            android:layout_width="220dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignStart="@+id/linearLayout6"
        android:layout_marginTop="27dp"
        android:id="@+id/linearLayout10">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密    码"
            android:textSize="25sp" />

        <EditText
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="18"
            android:inputType="textPassword"
            android:id="@+id/reg_password"
            android:layout_width="220dp"
            android:maxLines="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="31dp"
        android:id="@+id/linearLayout7"
        android:layout_below="@+id/linearLayout10"
        android:layout_alignStart="@+id/linearLayout10">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="20sp" />

        <EditText
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="18"
            android:inputType="textPassword"
            android:id="@+id/reg_next_password"
            android:layout_width="220dp"
            android:maxLines="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_marginStart="42dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignStart="@+id/linearLayout7"
        android:weightSum="1">


        <Button
            android:id="@+id/button_reg_register"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linearLayout6"
            android:layout_alignStart="@+id/linearLayout7"
            android:layout_below="@+id/linearLayout7"
            android:layout_marginStart="31dp"
            android:layout_marginTop="31dp"
            android:layout_weight="0.84"
            android:text="注   册"
            android:textSize="25sp" />
    </LinearLayout>


</RelativeLayout>