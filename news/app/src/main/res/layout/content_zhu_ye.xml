<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wangjia.news.ZhuYeActivity"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    >

<!--
    <android.support.v7.widget.Toolbar
        android:id="@+id/news_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="#837C7C"

        ></android.support.v7.widget.Toolbar>
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:hyman="http://schemas.android.com/apk/res/com.example.wangjia.news"
        android:orientation="vertical">

        <com.example.wangjia.news.utils.ViewPagerIndicator
            android:id="@+id/id_indicator"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/ic_title_bar"
            hyman:visible_tab_count="4"
            android:orientation="horizontal">



        </com.example.wangjia.news.utils.ViewPagerIndicator>

        <android.support.v4.view.ViewPager
            android:id="@+id/id_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v4.view.ViewPager>



    </LinearLayout>
</LinearLayout>